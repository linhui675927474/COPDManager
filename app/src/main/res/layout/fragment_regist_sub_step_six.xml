<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:text="注册信息——学历"
        android:textSize="18sp"
        android:textColor="@color/grey" />

    <EditText android:id="@+id/edt_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:padding="10dp"
        android:hint="学历"
        android:textColorHint="@color/lightGrey"
        android:textColor="@color/darkGrey"
        android:textSize="20sp"
        android:maxLines="1"
        android:background="@drawable/shape_register_input_border"
        android:enabled="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal">

        <Button android:id="@+id/btn_previous_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/tv_previous"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_shape_pef" />

        <Button android:id="@+id/btn_next_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/tv_next"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_shape_pef" />

    </LinearLayout>

    <!-- 学历 -->
    <include android:id="@+id/layout_education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        layout="@layout/view_education" />

</LinearLayout>