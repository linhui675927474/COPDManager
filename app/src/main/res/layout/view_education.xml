<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">
        <TextView  android:id="@+id/txv_grade_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="小学"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>
        <TextView android:id="@+id/txv_junior_middle_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="初中"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>
        <TextView android:id="@+id/txv_technical_secondary_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="中专"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>
        <TextView android:id="@+id/txv_high_middle_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="高中"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/txv_junior_college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="大专"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>
        <TextView android:id="@+id/txv_undergraduate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="本科"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>
        <TextView android:id="@+id/txv_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="硕士"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>
        <TextView android:id="@+id/txv_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="博士"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>
    </LinearLayout>

</LinearLayout>