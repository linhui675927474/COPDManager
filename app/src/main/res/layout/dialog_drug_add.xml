<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_drug_dialog"
    android:padding="20dp"
    android:id="@+id/ll_drug">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_add_drug"
            android:textSize="18sp"
            android:textColor="@color/darkGrey"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="X"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/btn_drug_select_close"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/backgroundGrey"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv_select_drug_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_sldie"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"/>
    <ImageView
        android:id="@+id/iv_select_drug_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/pic_sldie"/>

    <RelativeLayout
        android:id="@+id/rl_drug_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/tv_drug_name"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_custom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:hint="@string/tv_input_name"
            android:textColorHint="@color/grey"
            android:textSize="16sp"
            android:gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorPrimary"
            android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_drug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/btn_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/tv_drug_time"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_arrow" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/iv_arrow"
            android:layout_centerVertical="true"
            android:text="21:00"
            android:textSize="16sp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/backgroundGrey" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tv_sure"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="70dp"
        android:paddingEnd="70dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="@drawable/button_shape_pef"/>

</LinearLayout>