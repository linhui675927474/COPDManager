<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/backgroundGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button android:id="@+id/btn_num_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:text="1"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>

            <Button android:id="@+id/btn_num_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:text="2"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue" />

            <Button android:id="@+id/btn_num_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:text="3"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>

            <Button android:id="@+id/btn_num_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:text="退格"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button android:id="@+id/btn_num_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:text="4"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>

            <Button android:id="@+id/btn_num_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:text="5"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>

            <Button android:id="@+id/btn_num_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:text="6"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>

            <Button android:id="@+id/btn_num_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:text="清空"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button android:id="@+id/btn_num_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:text="7"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>

            <Button android:id="@+id/btn_num_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:text="8"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>

            <Button android:id="@+id/btn_num_nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:text="9"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>

            <Button android:id="@+id/btn_num_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:text="0"
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/lyot_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button android:id="@+id/btn_num_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:text="."
                android:textSize="20sp"
                android:background="@drawable/selector_num_key_white_to_blue"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>