<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <TextView  android:id="@+id/txv_worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="工人"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

        <TextView  android:id="@+id/txv_farmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="农民"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

        <TextView  android:id="@+id/txv_science"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="科技"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

        <TextView  android:id="@+id/txv_administrative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="行政"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <TextView  android:id="@+id/txv_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="教师"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

        <TextView  android:id="@+id/txv_finance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="金融"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

        <TextView  android:id="@+id/txv_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="商业"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

        <TextView  android:id="@+id/txv_medical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="医务"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <TextView  android:id="@+id/txv_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="学生"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

        <TextView  android:id="@+id/txv_soldier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="军人"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

        <TextView  android:id="@+id/txv_housework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="家务"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

        <TextView  android:id="@+id/txv_self"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="个体"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <TextView  android:id="@+id/txv_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="其他"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>
        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="军人"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="家务"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>

        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:text="个体"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:background="@drawable/selector_register_profession_tag"/>
    </LinearLayout>


</LinearLayout>