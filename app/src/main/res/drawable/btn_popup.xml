<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@color/colorPrimaryDark" />
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@color/colorPrimaryDark" />
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@color/colorPrimaryDark" />
    <item android:state_focused="true" android:drawable="@color/colorPrimaryDark" />
    <item android:state_focused="false" android:drawable="@color/colorPrimary"/>
</selector>




